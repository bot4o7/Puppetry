#version 330 core

in vec4 vColor;
in vec2 vTexCoords;
in int vTexSlot;
in bool vIsText;
out vec4 color;

uniform sampler2D uTexSlots[16];

void main()
{
    if (vIsText == false)
    {
        color = texture(uTexSlots[vTexSlot], vTexCoords) * vColor;
    }
    else
    {
        color = vec4(vColor.rgb, texture(uTexSlots[vTexSlot], vTexCoords).r * vColor.a);
    }
};
